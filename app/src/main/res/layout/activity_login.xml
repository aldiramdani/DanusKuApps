<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#ededed"
        tools:context="com.aikvanda.danuskuapps.login">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/danusku"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login dan Register"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="28sp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#C8000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:ems="1"
            android:inputType="textEmailAddress"
            android:hint="Username"
            android:background="#FFC107"
            android:drawablePadding="16dp"
            android:textColorHint="#c8000000"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:id="@+id/InUsername"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:ems="1"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#c8000000"
            android:background="#FFC107"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:id="@+id/InPass"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Login"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:background="@drawable/background_login_two"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:layout_marginRight="16dp"
                android:textSize="14dp"
                android:clickable="true"
                android:id="@+id/loginto"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Daftar"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:background="@drawable/background_login_two"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:layout_marginLeft="16dp"
                android:textSize="14dp"
                android:clickable="true"
                android:id="@+id/register"
                android:onClick="openRegister"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>